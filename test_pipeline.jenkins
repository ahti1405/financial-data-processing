pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                script {
                    try {
                        sh 'git clone https://github.com/ahti1405/financial-data-processing.git'
                    } catch (Exception e) {
                        error "Failed to clone repository: ${e}"
                    }
                }
            }
        }
        stage('Setup Environment') {
            steps {
                script {
                    dir('financial-data-processing') {
                        sh 'python3 -m venv venv'
                        sh './venv/bin/pip install -r requirements.txt'
                    }
                }
            }
        }
        stage('Run Tests') {
            steps {
                script {
                    dir('financial-data-processing') {
                        sh './venv/bin/pytest'
                    }
                }
            }
        }
    }

    post {
        always {
            // Archive test results
            archiveArtifacts artifacts: '**/financial-data-processing/test-reports/*.xml', allowEmptyArchive: true
            junit '**/financial-data-processing/test-reports/*.xml'

            // Cleanup actions
            script {
                sh 'rm -rf financial-data-processing'
                sh 'rm -rf venv' // If the venv is outside the repo, otherwise it's cleaned up with the repo.
            }
        }
    }
}
