pipeline {
    agent any 
    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/ahti1405/financial-data-processing.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'pip install -r requirements.txt'
            }
        }
        stage('Run Tests') {
            steps {
                sh 'pytest tests/'
            }
        }
    }
    post {
        always {
            archiveArtifacts artifacts: '**/output/*', fingerprint: true
        }
    }
}
